
@{
    ViewBag.Title = "ProjectAssignment";
}

<h2>ProjectAssignment</h2>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>RoleAssignment</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 text-center">
            @Html.Label("Select Project")
        </div>

        <div class="col-md-6 text-center">
            @Html.Label("Select User(s)")
        </div>
    </div>

    @Html.BeginForm()
    {
    @Html.AntiForgeryToken()
    <div class="row">


        <div class="col-md-6">
            @Html.DropDownList("Projects", null, htmlAttributes: new { @class = "form-control" })
        </div>

        <div class="col-md-6">
            @Html.DropDownList("Users", null, htmlAttributes: new { @class = "form-control" })
        </div>


    </div>

    <div class="row">
        <div class="col-md-12 text-center">
            <button class="btn btn-primary" type="submit">Save</button>
        </div>
    </div>
    }
</div>

